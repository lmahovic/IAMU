<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hr.algebra.boardgames">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BoardGames">
        <activity
            android:name="hr.algebra.boardgames.ItemPagerActivity"
            android:label="Details"
            android:exported="false" />

        <provider
            android:name="hr.algebra.boardgames.NasaProvider"
            android:authorities="hr.algebra.boardgames.api.provider"
            android:enabled="true"
            android:exported="false" />

        <receiver
            android:name="hr.algebra.boardgames.BoardGamesReceiver"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name="hr.algebra.boardgames.NasaService"
            android:enabled="true"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <activity
            android:name="hr.algebra.boardgames.HostActivity"
            android:exported="true" />
        <activity
            android:name="hr.algebra.boardgames.SplashScreenActivity"
            android:exported="true"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>